<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wx_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="新闻标题"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/wx_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wx_img2"
        android:layout_below="@id/wx_item_title"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/wx_img2"
        android:src="@mipmap/wxitembg" />

    <ImageView
        android:id="@+id/wx_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wx_item_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@mipmap/wxitembg" />

    <ImageView
        android:id="@+id/wx_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/wx_img2"
        android:layout_below="@id/wx_item_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/wx_img2"
        android:src="@mipmap/wxitembg" />

    <ImageView
        android:id="@+id/wx_collect"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/wx_item_title"
        android:layout_below="@id/wx_img1"
        android:layout_marginTop="12dp"
        android:src="@mipmap/banxing" />
    <TextView
        android:id="@+id/wx_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wx_img1"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/wx_collect"
        android:text="@string/wx_collect_failed" />

    <TextView
        android:id="@+id/wx_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/wx_author"
        android:layout_below="@id/wx_img1"
        android:layout_marginEnd="20dp"
        android:text="2016-06-23"
        />
</RelativeLayout>
