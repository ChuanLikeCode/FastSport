<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wx_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="新闻标题"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/wx_img1"
        android:layout_alignTop="@+id/wx_img2"
        android:layout_toStartOf="@+id/wx_img2"
        android:layout_marginEnd="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_back_my"
        android:layout_below="@id/wx_item_title"/>

    <ImageView
        android:id="@+id/wx_img2"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_back_my"
        android:layout_below="@id/wx_item_title"/>

    <ImageView
        android:id="@+id/wx_img3"
        android:layout_alignTop="@id/wx_img2"
        android:layout_toEndOf="@id/wx_img2"
        android:layout_marginStart="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_back_my"
        android:layout_below="@id/wx_item_title"/>

    <TextView
        android:id="@+id/wx_author"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:layout_below="@id/wx_img1"
        android:layout_alignStart="@id/wx_item_title"/>

    <TextView
        android:id="@+id/wx_time"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@id/wx_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-06-23"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/wx_img1"
        />
</RelativeLayout>
