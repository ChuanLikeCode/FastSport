<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title"
    tools:context=".ui.ChooseActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/choose_title_beTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我想成为？"
        android:layout_alignLeft="@id/logo"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/logo"/>
    <LinearLayout
        android:layout_below="@id/choose_title_beTo"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/choose_FitnessTrainer"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="教练"
            android:gravity="center"
            android:background="@drawable/choose_selector"
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/choose_student"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="学员"
            android:gravity="center"
            android:background="@drawable/choose_selector"
            android:textSize="19sp"/>
    </LinearLayout>

</RelativeLayout>
