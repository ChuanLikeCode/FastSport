<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dragscaleimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <com.sibo.fastsport.view.DragScaleImageView
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        dragscaleimageview:scale_image="@drawable/imagefirst"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/activity_myhome_iv_share"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/edit" />

        <ImageView
            android:id="@+id/activity_myhome_iv_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/set" />

        <com.sibo.fastsport.view.CircleImageView
            android:id="@+id/activity_mylhome_iv_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/touxiang" />

        <LinearLayout
            android:id="@+id/xingxing_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/activity_mylhome_iv_touxiang"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_personalhome_tv_quanxing1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/activity_mylhome_iv_touxiang"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_personalhome_iv_quanxing2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_personalhome_tv_quanxing1"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_personalhome_iv_banxing3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_personalhome_iv_quanxing2"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_personalhome_iv_banxing4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_personalhome_iv_banxing3"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_personalhome_iv_banxing3"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_personalhome_iv_banxing5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_personalhome_iv_banxing4"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_personalhome_iv_banxing4"
                android:src="@mipmap/banxing" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_personalhome_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/activity_mylhome_iv_touxiang"
            android:text="小明"
            android:textColor="@color/white"

            android:textSize="15sp" />

        <ImageView
            android:id="@+id/activity_personalhome_iv_man"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/activity_personalhome_tv_name"
            android:src="@mipmap/man" />

        <ImageView
            android:id="@+id/activity_personalhome_iv_phone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/activity_mylhome_iv_touxiang"
            android:layout_alignStart="@+id/activity_personalhome_tv_name"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/xingxing_linearLayout"
            android:layout_toEndOf="@+id/activity_personalhome_iv_phone"
            android:text="13990081234"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/xingxing_linearLayout"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="年龄"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="30岁"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="身高"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_tall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="180cm"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="体重"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="75kg"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="教龄"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_teachyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:text="8年"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </com.sibo.fastsport.view.DragScaleImageView>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/rl_head"
        android:background="@color/lime_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="擅长领域"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/domain"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:id="@+id/activity_personalhome_iv_jianshen"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:background="@mipmap/biaoqian"
                        android:gravity="center"
                        android:text="健身"
                        android:textColor="@color/gray_light"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/activity_personalhome_iv_jixie"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:background="@mipmap/biaoqian"
                        android:gravity="center"
                        android:text="机械"
                        android:textColor="@color/gray_light"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/activity_personalhome_iv_yujia"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:background="@mipmap/biaoqian"
                        android:gravity="center"
                        android:text="瑜伽"
                        android:textColor="@color/gray_light"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/activity_personalhome_iv_jianmeicao"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@mipmap/biaoqian"
                        android:gravity="center"
                        android:text="健美操"
                        android:textColor="@color/gray_light"
                        android:textSize="18dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/activity_personalhome_iv_enterdomain"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/linearLayout2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/you" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_personalhome_tv_jiaoyujingli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="教育经历"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_jiaoyu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/activity_personalhome_tv_jiaoyujingli"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lime_white"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="  执教8年\n  年龄30/身高178cm/体重75kg\n  健身机械Crossfit、普拉提......"
                    android:textColor="@color/gray_light"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_personalhome_tv_xiangqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="详情"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <com.dalong.library.view.LoopRotarySwitchView
                    android:id="@+id/activity_myhome_loopView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/activity_personalhome_tv_xiangqing"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white_bg"
                    android:gravity="center" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_personalhome_tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="地址"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_adressdetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/activity_personalhome_tv_adress"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lime_white"
                    android:gravity="center"
                    android:text="深圳东海国际"
                    android:textColor="@color/gray_light" />

                <ImageView
                    android:id="@+id/activity_personalhome_iv_ditu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/activity_personalhome_tv_adressdetail"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/ditu" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!--<LinearLayout
        android:id="@+id/myhome_menu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include
            android:id="@+id/myhome_menu"
            layout="@layout/menu_layout" />

    </LinearLayout>-->


</RelativeLayout>
