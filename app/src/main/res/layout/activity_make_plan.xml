<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context="com.sibo.fastsport.ui.MakePlanActivity">

    <include
        android:id="@+id/makePlanActivity_title"
        layout="@layout/activity_title_bar" />

    <HorizontalScrollView
        android:id="@+id/makePlanActivity_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/makePlanActivity_title"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@color/light_white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day1"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"

                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day2"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="80dp"
                android:layout_height="70dp"


                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day3"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="80dp"
                android:layout_height="70dp"


                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day4"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="80dp"
                android:layout_height="70dp"


                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day5"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="80dp"
                android:layout_height="70dp"


                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day6"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll7"
                android:layout_width="80dp"
                android:layout_height="70dp"


                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day7"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_select_default" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/makePlanActivity_scrollView"
        android:layout_marginTop="10dp" />
</RelativeLayout>
