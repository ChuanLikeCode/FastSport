<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/imagefirst">
        <ImageView
            android:id="@+id/activity_editzhuye_iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/fanhui" />
        <ImageView
            android:id="@+id/activity_editzhuye_iv_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/fenxiang" />

        <ImageView
            android:id="@+id/activity_editzhuye_iv_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/touxiang" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_editzhuye_iv_touxiang"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_editzhuye_tv_quanxing1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/activity_editzhuye_iv_touxiang"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_editzhuye_iv_quanxing2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_editzhuye_tv_quanxing1"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_editzhuye_iv_banxing3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_editzhuye_iv_quanxing2"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_editzhuye_iv_banxing4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_editzhuye_iv_banxing3"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_editzhuye_iv_banxing3"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_editzhuye_iv_banxing5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_editzhuye_iv_banxing4"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_editzhuye_iv_banxing4"
                android:src="@mipmap/banxing" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_editzhuye_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/activity_editzhuye_iv_touxiang"
            android:text="小明"
            android:textColor="#fff"

            android:textSize="15sp" />

        <ImageView
            android:id="@+id/activity_editzhuye_iv_man"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/activity_editzhuye_tv_name"
            android:src="@mipmap/man" />

        <ImageView
            android:id="@+id/activity_editzhuye_iv_phone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/activity_editzhuye_iv_touxiang"
            android:layout_alignStart="@+id/activity_editzhuye_tv_name"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/activity_editzhuye_tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_toEndOf="@+id/activity_editzhuye_iv_phone"
            android:text="13990081234"
            android:textColor="#fff"
            android:textSize="13sp" />


    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lime_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="擅长领域"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/domain"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:id="@+id/activity_editzhuye_iv_jianshen"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:background="@mipmap/biaoqian"
                        android:gravity="center"
                        android:text="添加"
                        android:textColor="@color/gray_light"
                        android:textSize="18dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/activity_personalhome_iv_enterdomain"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/linearLayout2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/you" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_personalhome_tv_jiaoyujingli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="教育经历"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_personalhome_tv_jiaoyu"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/activity_personalhome_tv_jiaoyujingli"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lime_white"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text=" 请输入"
                    android:textColor="@color/gray_light"
                    android:textSize="18dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_editzhuye_tv_xiangqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="详情"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_editzhuye_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/activity_editzhuye_tv_xiangqing"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light"
                    android:scrollbars="vertical" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_editzhuye_tv_xiangqing"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/tianjia" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/activity_editzhuye_tv_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:text="地址"
                    android:textColor="@color/gray_hint"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/activity_editzhuye_tv_adressdetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/activity_editzhuye_tv_adress"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/lime_white"
                    android:gravity="center"
                    android:text="当前位置:深圳东海国际"
                    android:textColor="@color/gray_light" />

                <ImageView
                    android:id="@+id/activity_editzhuye_iv_ditu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/activity_editzhuye_tv_adressdetail"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/ditu" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
