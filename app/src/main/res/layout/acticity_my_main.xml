<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/title"
        android:background="@mipmap/mine_bg">

        <ImageView
            android:id="@+id/activity_my_main_iv_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/set" />

        <ImageView
            android:id="@+id/activity_my_main_iv_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_my_main_iv_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="23dp"
            android:src="@mipmap/touxiang" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/activity_my_main_iv_touxiang"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_my_main_tv_quanxing1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/activity_my_main_iv_touxiang"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_my_main_iv_quanxing2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_my_main_tv_quanxing1"
                android:src="@mipmap/quanxing" />

            <ImageView
                android:id="@+id/activity_my_main_iv_banxing3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_my_main_iv_quanxing2"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_my_main_iv_banxing4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_my_main_iv_banxing3"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_my_main_iv_banxing3"
                android:src="@mipmap/banxing" />

            <ImageView
                android:id="@+id/activity_my_main_iv_banxing5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/activity_my_main_iv_banxing4"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_my_main_iv_banxing4"
                android:src="@mipmap/banxing" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_my_main_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/activity_my_main_iv_touxiang"
            android:layout_alignTop="@+id/activity_my_main_iv_touxiang"
            android:layout_marginStart="60dp"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/activity_my_main_iv_man"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/activity_my_main_tv_name"
            android:layout_toEndOf="@+id/linearLayout3"
            android:src="@mipmap/man" />

        <ImageView
            android:id="@+id/activity_my_main_iv_phone"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignStart="@+id/activity_my_main_tv_name"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout3"
            android:layout_toEndOf="@+id/activity_my_main_iv_phone"
            android:text="13990081234"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/divider0"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/rl_head"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/rl_zhuye"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/divider0"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_zhuye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/zhuye"
            />

        <TextView
            android:id="@+id/tv_zhuye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_zhuye"
            android:text="@string/my_index"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_my_main_iv_enterhome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/you" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_zhuye"
        android:background="@color/lime_white" />

    <RelativeLayout
        android:id="@+id/rl_tongji"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/divider1"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_tongji"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/tongji"
            />

        <TextView
            android:id="@+id/tv_tongji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_tongji"
            android:text="@string/my_statistics"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_my_main_iv_entertotal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/you" />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_tongji"
        android:background="@color/lime_white" />

    <RelativeLayout
        android:id="@+id/rl_guanli"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/divider2"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_guanli"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/guanli"
            />

        <TextView
            android:id="@+id/tv_guanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_guanli"
            android:text="@string/my_manage"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/activity_my_main_iv_entermanager"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/you" />

    </RelativeLayout>
    <View
    android:id="@+id/divider5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_above="@+id/lr_below"
        android:layout_below="@+id/rl_guanli"
        android:background="@color/lime_white" />

</RelativeLayout>
