<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:background="@color/lime_white">

        <ImageView
            android:id="@+id/choose_item_checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_select_default" />

        <ImageView
            android:id="@+id/choose_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/choose_item_checkbox"
            android:src="@mipmap/loading" />

        <TextView
            android:id="@+id/choose_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/choose_item_img"
            android:text="三头下压"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/choose_item_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/choose_item_name"
            android:layout_below="@id/choose_item_name"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/choose_item_img"
            android:text="@string/level"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/choose_item_tv_level"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/choose_item_tv_level"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/choose_item_iv_level1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/quanxing"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/choose_item_iv_level2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/quanxing"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/choose_item_iv_level3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/quanxing"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/choose_item_iv_level4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/quanxing"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/choose_item_iv_level5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/quanxing"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
