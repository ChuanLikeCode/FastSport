<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lime_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_setting_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:src="@mipmap/fanhui_title"
            />

        <TextView
            android:id="@+id/activity_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_setting_rl1_tv_vnewinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="新消息通知"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/activity_setting_rl1_iv_enter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/you" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_rl2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_setting_rl2_tv_checkupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="检查更新"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/activity_setting_rl2_iv_enter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/you" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_rl3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_setting_rl_tv_cleardata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="清楚数据"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/activity_setting_rl3_iv_enter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/you" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_rl4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_setting_l4_tv_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="意见反馈"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/activity_setting_rl4_iv_enter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/you" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_setting_rl5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_setting_rl_tv_regarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="关于"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/activity_setting_rl5_iv_enter5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/you" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        >

        <ImageView
            android:id="@+id/activity_setting_iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/redbtn" />

        <TextView
            android:id="@+id/activity_setting_tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="退出登陆"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>


</LinearLayout>
